generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DiscordGuild {
  id          String    @id
  guildName   String
  guildAvatar String
  channels    Channel[]
}

model Channel {
  id             String       @id
  channelName    String
  discordGuildId String
  guildName      String
  discordGuild   DiscordGuild @relation(fields: [discordGuildId], references: [id])
  messages       Message[]
}

model Message {
  id                String   @id
  timestamp         BigInt
  guildChannelId    String
  username          String
  userAvatar        String
  isBot             Boolean
  content           String?
  attachmentContent String[]
  guildChannel      Channel  @relation(fields: [guildChannelId], references: [id])
}
